<?xml version='1.0' encoding='UTF-8'?>
<addons><addon id="script.lutris" name="Lutris" version="1.4.3" provider-name="Rob Loach">
    <requires>
        <import addon="xbmc.python" version="2.25.0" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>game</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Lutris</summary>
        <description lang="en_GB">Lutris Kodi Addon is a frontent for Lutris in Kodi. You need to have Lutris installed to use this add-on.</description>
        <disclaimer lang="en_GB">For more information, visit Lutris.net.</disclaimer>
        <license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
        <website>http://lutris.net</website>
        <news lang="en_GB">Version 1.4.2: September 16th, 2020
		- Minor code improvements, by @solbero</news>
        <source>http://github.com/robloach/script.lutris</source>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
            <screenshot>resources/screenshot.jpg</screenshot>
        </assets>
        <platform>linux</platform>
        <language>en</language>
    </extension>
</addon><addon id="plugin.game.gamehub" name="GameHub" version="1.0.2" provider-name="solbero">
    <requires>
        <import addon="xbmc.python" version="2.26.0" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>game</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">A launcher for the GameHub appliation.</summary>
        <description lang="en_GB">This plugin is a launcher for the GameHub application. GameHub allows you to view, download, install, run and uninstall games from supported sources. Its interface is compatible with gamepads. You need to have GameHub installed on your system to use this addon.</description>
        <disclaimer lang="en_GB">For more information about GameHub, visit tkashkin.tk/projects/gamehub/.</disclaimer>
        <license>GPL-2.0</license>
        <website>https://tkashkin.tk/projects/gamehub/</website>
        <news lang="en_GB">Version 1.0.2: March 19th, 2020
            - Various code fixes</news>
        <source>https://github.com/solbero/plugin.game.gamehub</source>
        <language>en</language>
        <platform>linux</platform>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
            <screenshot>resources/screenshot_1.jpg</screenshot>
            <screenshot>resources/screenshot_2.jpg</screenshot>
            <screenshot>resources/screenshot_3.jpg</screenshot>
            <screenshot>resources/screenshot_4.jpg</screenshot>
        </assets>
    </extension>
</addon></addons>